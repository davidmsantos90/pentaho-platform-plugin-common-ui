{
  "extends": [
    "plugin:import/recommended",
    "airbnb-base",
    "prettier"
  ],

  "plugins": ["import"],

  "parserOptions": {
    "ecmaVersion": 2020
  },

  "env": {
    "amd" : true,
    "jasmine": true,
    "browser": true
  },

  "globals": {
    "inject": true,
    "module": true,
    "requirejs": true
  },

  "rules": {
    "curly": "error",
    "import/no-amd": "off",
    "linebreak-style": "off",
    "max-len": [2, 120, 2],
    "no-plusplus": ["warn", { "allowForLoopAfterthoughts": true }],
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off",
    "prefer-rest-params": "off",
    "prefer-spread": "off"
  }
}
